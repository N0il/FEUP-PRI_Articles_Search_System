{
    "add-field-type": [
    {
        "name":"titleType",
        "class":"solr.TextField",
        "indexAnalyzer":{
            "tokenizer":{
                "class":"solr.ClassicTokenizerFactory"
            },
            "filters":[                
                {"class":"solr.ClassicFilterFactory"},
                {"class":"solr.LowerCaseFilterFactory"},
                {"class":"solr.ASCIIFoldingFilterFactory", "preserveOriginal":true},
                {"class":"solr.PorterStemFilterFactory"},
                {"class":"solr.StopFilterFactory", "ignoreCase":true, "words":"stopwords.txt"},
                {"class":"solr.PhoneticFilterFactory", "encoder":"DoubleMetaphone"},
                {"class":"solr.RemoveDuplicatesTokenFilterFactory"}
            ]
        },
        "queryAnalyzer":{
            "tokenizer":{
                "class":"solr.ClassicTokenizerFactory"
            },
            "filters":[
                {"class":"solr.ClassicFilterFactory"},
                {"class":"solr.LowerCaseFilterFactory"},
                {"class":"solr.StopFilterFactory", "ignoreCase":true, "words":"stopwords.txt"},
                {"class":"solr.SynonymGraphFilterFactory", "synonyms":"synonyms.txt"},
                {"class":"solr.PhoneticFilterFactory", "encoder":"DoubleMetaphone"},
                {"class":"solr.RemoveDuplicatesTokenFilterFactory"}
            ]
        }
    },
    {
        "name": "summary",
        "class": "solr.TextField",
        "indexAnalyzer": {
          "tokenizer": {
            "class":"solr.ClassicTokenizerFactory"
          },
          "filters": [
            {"class":"solr.ClassicFilterFactory"},
            {"class":"solr.ASCIIFoldingFilterFactory", "preserveOriginal":true},
            {"class":"solr.StopFilterFactory", "ignoreCase":true, "words":"stopwords.txt"},
            {"class": "solr.CommonGramsFilterFactory"},
            {"class": "solr.BeiderMorseFilterFactory", "nameType": "GENERIC", "ruleType": "APPROX", "concat": true, "languageSet": "auto"}
          ]
        },
        "queryAnalyzer":{
            "tokenizer":{
                "class":"solr.ClassicTokenizerFactory"
            },
            "filters":[
                {"class":"solr.ClassicFilterFactory"},
                {"class":"solr.LowerCaseFilterFactory"},
                {"class":"solr.SynonymGraphFilterFactory", "synonyms":"synonyms.txt"},
                {"class":"solr.PhoneticFilterFactory", "encoder":"DoubleMetaphone"},
                {"class":"solr.RemoveDuplicatesTokenFilterFactory"}
            ]
        }
    },
    {
        "name": "date",
        "class": "solr.DatePointField"
    }
    ],
    "add-field": [
        {
            "name": "title",
            "type": "titleType",
            "stored": true,
            "required": true
        },
        {
            "name": "summary",
            "type": "summary",
            "indexed": true,
            "stored": true,
            "required": true
        },
        {
            "name": "authors",
            "type": "text_en",
            "multiValued": true,
            "required": true
        },
        {
            "name": "areas",
            "type": "text_en",
            "multiValued": true,
            "required": true
        },
        {
            "name": "fields",
            "type": "text_en",
            "multiValued": true,
            "required": true
        },
        {
            "name": "subjects",
            "type": "text_en",
            "multiValued": true,
            "required": true
        },
        {
            "name": "date",
            "type": "date",
            "required": true
        }
    ]
}