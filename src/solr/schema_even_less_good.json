{
    "add-field-type": [
    {
        "name":"titleType",
        "class":"solr.TextField",
        "indexAnalyzer":{
            "tokenizer": {
                "class":"solr.ClassicTokenizerFactory"
            },
            "filters":[                
                {"class":"solr.ClassicFilterFactory"},
                {"class":"solr.LowerCaseFilterFactory"},
                {"class":"solr.ASCIIFoldingFilterFactory", "preserveOriginal":true}
            ]
        },
        "queryAnalyzer":{
            "tokenizer":{
                "class":"solr.ClassicTokenizerFactory"
            },
            "filters":[
                {"class":"solr.ClassicFilterFactory"},
                {"class":"solr.LowerCaseFilterFactory"}
            ]
        }
    },
    {
        "name": "date",
        "class": "solr.DatePointField"
    }
    ],
    "add-field": [
        {
            "name": "title",
            "type": "titleType",
            "stored": true,
            "required": true
        },
        {
            "name": "summary",
            "type": "text_en",
            "indexed": true,
            "stored": true,
            "required": true
        },
        {
            "name": "authors",
            "type": "text_en",
            "multiValued": true,
            "required": true
        },
        {
            "name": "areas",
            "type": "text_en",
            "multiValued": true,
            "required": true
        },
        {
            "name": "fields",
            "type": "text_en",
            "multiValued": true,
            "required": true
        },
        {
            "name": "subjects",
            "type": "text_en",
            "multiValued": true,
            "required": true
        },
        {
            "name": "date",
            "type": "date",
            "required": true
        }
    ]
}